#include <iostream>
#include <string>

using namespace std;
int main() {


int  acountNum = 123 , passowrd =1122;
int  Balance;
int option;
int amonun ;
int DepositMoney;

cout << "acountNum :" ;

cin >> acountNum ;
cout<<"passowrd :";
cin >> passowrd;




if (acountNum !=123 ||  passowrd != 1122){
cout<< "error acountNum or passowrd ";
}

cout << "enter balance ";
cin >> Balance ;
 
 
 do 
 {cout << " Check Account Balance -->1 \n";
cout << "withadraw Money -->2\n ";
cout << " Deposit Money -->3\n ";
cout <<"Exit-->4\n ";
 
 cin >> option ;
 cout << "Enter:"; 
 
 switch(option){
 	
 	case 1:	//"Check Account Balance"; 
 	
 	cout << "Balance:"<< Balance ;
 	break;
 	
 	
 	
 	case 2:// "Withdraw Money";
 	cin >> amonun ; 
 	if (Balance >= amonun){
	 
 		 	Balance =Balance- amonun ;
	 cout << "Balance:" << Balance;}
	 
 	else
	  cout << "You don't have enough credit ";
 	
 	break ;
 	
 	
 	case 3: //"	Deposit Money: ";
 	
 	
 	cin >>DepositMoney;
 	Balance =Balance + DepositMoney;
 	cout << "Deposit Money :" << Balance ; 
 	 	break;
 	
	
 	
 }
 
 
 }while(option !=4);

cout << "Thank you";

}
